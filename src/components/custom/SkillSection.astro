---
import SkillLogo from '@/components/custom/SkillLogo.astro';

interface Props {
  title: string;
  description?: string;
  skills: { title: string; classLogo: string }[];
}

const { title, description, skills } = Astro.props;
---

<h3 class="text-lg font-semibold mt-8">{title}</h3>
<p class="text-muted-foreground text-sm">{description}</p>
<div class="flex flex-wrap gap-2 sm:gap-3 mt-2">
  {
    skills.map((skill) => (
      <SkillLogo title={skill.title} classLogo={skill.classLogo} />
    ))
  }
</div>
