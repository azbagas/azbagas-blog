---
import azbagasLogoFullWhite from '@/assets/images/azbagas-logo-full-white.svg';
import azbagasLogoFullBlack from '@/assets/images/azbagas-logo-full-black.svg';
import azbagasLogoOnlyWhite from '@/assets/images/azbagas-logo-only-white.svg';
import azbagasLogoOnlyBlack from '@/assets/images/azbagas-logo-only-black.svg';

import Navigation from './Navigation';
---

<nav
  class="custom-container py-4 sticky top-0 bg-background/70 backdrop-blur-xl box-content"
>
  <div class="flex justify-between items-center">
    {/* Logo */}
    <a href="/">
      <img src={azbagasLogoFullWhite.src} class="w-28 hidden dark:sm:block" />
      <img
        src={azbagasLogoOnlyWhite.src}
        class="w-10 hidden dark:sm:hidden dark:block"
      />
      <img
        src={azbagasLogoFullBlack.src}
        class="w-28 hidden dark:hidden sm:block"
      />
      <img
        src={azbagasLogoOnlyBlack.src}
        class="w-10 block dark:hidden sm:hidden"
      />
    </a>

    <Navigation client:load />
  </div>
</nav>

<script is:inline>
  // If window scroll Y is more than 20, add border to navbar
  window.addEventListener('scroll', () => {
    const navbar = document.querySelector('nav');
    const navClasses = ['md:border-x', 'border-b', 'md:rounded-b-lg'];
    if (window.scrollY > 20) {
      navbar.classList.add(...navClasses);
    } else {
      navbar.classList.remove(...navClasses);
    }
  });
</script>
